{{!-- Components --}}
{{#*inline "ability-data"}}
<div class="ability-data-{{@key}}">
    <div class="ability-skills grid grid-3col">
        {{#each skills as skill}}
        <div class="skill-container flexcol flex-group-center">
            <span class="skill-affinity"><input name="system.skillFamilies.{{ @...key }}.{{ @key }}" type="number"
                    value="{{ skill.affinity }}" data-dtype="Number" />
            </span>
            <span class="skill-label">{{defineLabel @...key @key }}</span>
        </div>
        {{/each}}
    </div>
    <div class="ability-filling">
        <div class="ability-xp">
            <input name="actor.system.skillFamilies.{{@key}}.xp" type="number" value="{{ xp }}" data-dtype="Number" />
            <div>{{localize "THI.XP"}}</div>
        </div>
        <div class="ability-harm">
            <input name="actor.system.skillFamilies.{{@key}}.harm" type="number" value="{{ harm }}"
                data-dtype="Number" />
            <div>{{localize "THI.Harm"}}</div>
        </div>
    </div>
</div>
{{/inline}}


<form class="{{cssClass}} flexcol" autocomplete="off">
    <header class="sheet-header">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}"
                placeholder="{{ localize 'Name' }}" /></h1>
        <div class="right">
            <h1>{{localize "THI.Identity.Label"}}</h1>
            <p>{{localize "THI.Identity.Name"}}: {{actor.name}}</p>
            <p>{{localize "THI.Identity.Age"}}: {{actor.system.age}}</p>
            <p>{{localize "THI.Identity.Culture"}}: {{actor.system.culture}}</p>
        </div>
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    </header>


    <section class="sheet-body">
        <div class="main-content">
            <div class="abilities grid grid-4col">
                {{#each actor.system.skillFamilies}}
                {{> ability-data }}
                {{/each}}
            </div>
        </div>
    </section>

    <section class="capacities">
        <h2>Here lies the capacities</h2>
    </section>
</form>